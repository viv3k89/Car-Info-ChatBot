    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f4f4f9;
        }

        /* Header */
        header {
            background-color: #222;
            color: #fff;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 10;
        }

        header h1 {
            font-size: 28px;
            color: #ff6b6b;
            font-weight: bold;
        }

        header ul {
            list-style: none;
            display: flex;
        }

        header ul li {
            margin: 0 15px;
        }

        header ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            transition: color 0.3s;
        }

        header ul li a:hover {
            color: #ff6b6b;
        }

        #search {
            padding: 8px;
            border-radius: 4px;
            border: none;
            outline: none;
        }

        /* Banner */
        #banner {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('your-banner-image.jpg') no-repeat center center/cover;
            color: #fff;
            text-align: center;
            padding: 100px 20px;
            height: 70vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
        }

        #banner .banner-content h2 {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 15px;
            animation: fadeInDown 1s ease-out;
        }

        #banner p {
            font-size: 18px;
            margin-bottom: 20px;
            max-width: 600px;
            animation: fadeInDown 1.2s ease-out;
        }

        #banner button {
            margin: 10px;
            padding: 12px 25px;
            border: none;
            background-color: #ff6b6b;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
            animation: fadeInUp 2.2s ease-out;
        }

        #banner button:hover {
            background-color: #ff5151;
        }

        /* Categories Section */
        #categories {
            padding: 60px 20px;
            text-align: center;
            background-color: #fff;
        }

        #categories h2 {
            font-size: 36px;
            color: #222;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .category-item {
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .category-item:hover {
            transform: scale(1.05);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        }

        .category-item h3 {
            font-size: 24px;
            color: #ff6b6b;
            margin-bottom: 10px;
        }

        /* Products Section */
        #products {
            padding: 60px 20px;
            background-color: #f4f4f9;
        }

        #products h2 {
            font-size: 36px;
            color: #222;
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .product-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-item:hover {
            transform: scale(1.05);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        }

        .product-item h4 {
            font-size: 20px;
            color: #333;
            margin-bottom: 10px;
        }

        .product-item p {
            font-size: 16px;
            color: #555;
            margin-bottom: 10px;
        }

        /* Customization Tool */
        #customize {
            padding: 60px 20px;
            text-align: center;
            background-color: #fff;
        }

        #customize h2 {
            font-size: 36px;
            color: #222;
            margin-bottom: 20px;
            font-weight: bold;
        }

        #customize p {
            font-size: 18px;
            color: #666;
            max-width: 600px;
            margin: auto;
        }

        /* Footer */
        footer {
            background-color: #222;
            color: #fff;
            text-align: center;
            padding: 20px;
            margin-top: 20px;
        }

