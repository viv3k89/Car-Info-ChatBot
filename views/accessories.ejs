    <!-- JavaScript for Dropdown Search -->
    <script>
        const accessoryInput = document.getElementById('accessoryInput');
        const dropdownContent = document.getElementById('dropdownContent');

        accessoryInput.addEventListener('input', function () {
            const filter = accessoryInput.value.toLowerCase();
            const items = dropdownContent.getElementsByTagName('a');

            // Show dropdown when user starts typing
            dropdownContent.style.display = 'block';

            // Loop through items and hide those that don't match
            for (let i = 0; i < items.length; i++) {
                const txtValue = items[i].textContent || items[i].innerText;
                items[i].style.display = txtValue.toLowerCase().includes(filter) ? "" : "none";
            }
        });

        // Close dropdown when clicking outside
        window.onclick = function (event) {
            if (!event.target.matches('#accessoryInput')) {
                dropdownContent.style.display = 'none';
            }
        };
    </script>
