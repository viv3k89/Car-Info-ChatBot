            <h4>What financing options are available?</h4>
            <p>We provide various financing options, including low-interest loans and flexible payment plans. Please
                reach out to our sales team for more details.</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact-section">
        <h3>Contact Us</h3>
        <p>If you have any questions, feel free to reach out to us!</p>
        <form class="contact-form">
            <input type="text" placeholder="Your Name" required>
            <input type="email" placeholder="Your Email" required>
            <textarea placeholder="Your Message" rows="4" required></textarea>
            <button type="submit">Send Message</button>
        </form>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 CarCatalog.</p>
    </footer>

    <script>
        const carModels = [
            "Audi A4", "BMW 5 Series", "Mercedes E-Class", "Tesla Model S", "Ford Mustang",
            "Chevrolet Camaro", "Honda Civic", "Toyota Corolla", "Nissan Altima", "Hyundai Elantra"
        ];

        function filterCars() {
            const input = document.getElementById('carSearchInput').value.toLowerCase();
            const dropdown = document.getElementById('carDropdown');
            dropdown.innerHTML = ''; // Clear previous results

            if (input === '') {
                dropdown.style.display = 'none';
                return;
            }

            const filteredModels = carModels.filter(model => model.toLowerCase().includes(input));
            if (filteredModels.length > 0) {
                dropdown.style.display = 'block';
                filteredModels.forEach(model => {
                    const div = document.createElement('div');
                    div.textContent = model;
                    div.onclick = () => {
                        document.getElementById('carSearchInput').value = model;
                        dropdown.style.display = 'none';
                    };
                    dropdown.appendChild(div);
                });
            } else {
                dropdown.style.display = 'none';
            }
        }
    </script>
</body>

</html>